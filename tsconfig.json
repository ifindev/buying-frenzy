{
	"compilerOptions": {
		"strict": true,
		"target": "es2018",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "./dist/"]
}
