{
	"name": "buying-frenzy",
	"version": "0.0.1",
	"description": "A backend service and a database for a food delivery platform.",
	"main": "./src/server.ts",
	"directories": {
		"doc": "docs"
	},
	"scripts": {
		"ts-build": "npm run test && npx tsc ./src/server.ts",
		"exec-etl": "ts-node ./src/db/etl/etl.ts",
		"test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register '__tests__/**/*.ts'",
		"lint": "npx eslint src/**/*.ts",
		"prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run prettier-format && npm run lint"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ifindev/buying-frenzy.git"
	},
	"keywords": [
		"buying-frenzy",
		"koajs",
		"typescript",
		"rest-api"
	],
	"author": "Muhammad Arifin",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/ifindev/buying-frenzy/issues"
	},
	"homepage": "https://github.com/ifindev/buying-frenzy#readme",
	"devDependencies": {
		"@types/chai": "^4.3.0",
		"@types/mocha": "^9.1.0",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"chai": "^4.3.6",
		"eslint": "^8.12.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^16.1.4",
		"eslint-plugin-import": "^2.25.4",
		"husky": "^7.0.4",
		"mocha": "^9.2.2",
		"prettier": "^2.6.1",
		"typescript": "^4.6.3"
	},
	"dependencies": {
		"@types/node": "^17.0.23",
		"ts-node": "^10.7.0"
	}
}
